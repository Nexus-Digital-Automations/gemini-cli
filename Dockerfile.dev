FROM docker.io/library/node:20-slim

ARG SANDBOX_NAME="gemini-cli-sandbox"
ARG CLI_VERSION_ARG
ENV SANDBOX="$SANDBOX_NAME"
ENV CLI_VERSION=$CLI_VERSION_ARG

# Install minimal set of packages, then clean up
RUN apt-get update && apt-get install -y --no-install-recommends \
  python3 \
  make \
  g++ \
  man-db \
  curl \
  dnsutils \
  less \
  jq \
  bc \
  gh \
  git \
  unzip \
  rsync \
  ripgrep \
  procps \
  psmisc \
  lsof \
  socat \
  ca-certificates \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*

# Set up npm global package folder under /usr/local/share
# Give it to non-root user node, already set up in base image
RUN mkdir -p /usr/local/share/npm-global \
  && chown -R node:node /usr/local/share/npm-global
ENV NPM_CONFIG_PREFIX=/usr/local/share/npm-global
ENV PATH=$PATH:/usr/local/share/npm-global/bin

# Switch to non-root user node
USER node

# Set working directory
WORKDIR /usr/src/app

# Copy all source code
COPY --chown=node:node . .

# Install dependencies
RUN npm install --include=dev

# Build the packages
RUN npm run generate

# Create a simple startup script
RUN echo '#!/bin/bash\necho "Gemini CLI Development Container"\necho "Available commands:"\necho "  npm run start - Start the CLI in development mode"\necho "  npm run build - Build the packages"\necho "  npm run lint - Run linting"\necho "  npm run test - Run tests"\necho ""\necho "To use gemini CLI, run: npm run start [command]"\nexec "$@"' > /usr/local/bin/entrypoint.sh && \
    chmod +x /usr/local/bin/entrypoint.sh

# Set up environment for development
ENV NODE_ENV=development

# Default entrypoint
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["bash"]